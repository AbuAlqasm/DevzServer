<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DevzServer | Premium Panel</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=Fira+Code&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
    <script src="https://unpkg.com/lucide@latest"></script>
</head>

<body>
    <!-- SVG Icon Library (Hidden) -->
    <div style="display: none;">
        <svg id="icon-home" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" />
            <polyline points="9 22 9 12 15 12 15 22" />
        </svg>
        <svg id="icon-files" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path d="M15 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V7Z" />
            <path d="M14 2v4a2 2 0 0 0 2 2h4" />
        </svg>
        <svg id="icon-backup" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path
                d="M21 8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16Z" />
            <path d="m3.3 7 8.7 5 8.7-5" />
            <path d="M12 22V12" />
        </svg>
        <svg id="icon-power" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path d="M18.36 6.64a9 9 0 1 1-12.73 0" />
            <line x1="12" y1="2" x2="12" y2="12" />
        </svg>
    </div>

    <aside class="sidebar">
        <div class="logo">
            <svg viewBox="0 0 24 24" fill="none" stroke="var(--primary)" style="width: 28px; height: 28px;">
                <rect width="18" height="18" x="3" y="3" rx="2" />
                <path d="M12 8v8" />
                <path d="M8 12h8" />
            </svg>
            <span>DevzServer</span>
        </div>

        <nav class="nav-links">
            <div class="nav-item active" onclick="switchTab('console')" id="nav-console">
                <svg>
                    <use href="#icon-home" />
                </svg> <span>Dashboard</span>
            </div>
            <div class="nav-item" onclick="switchTab('files')" id="nav-files">
                <svg>
                    <use href="#icon-files" />
                </svg> <span>File Manager</span>
            </div>
            <div class="nav-item" onclick="switchTab('backups')" id="nav-backups">
                <svg>
                    <use href="#icon-backup" />
                </svg> <span>Backups</span>
            </div>
        </nav>

        <div class="user-profile">
            <div class="avatar">
                <%= user.username[0].toUpperCase() %>
            </div>
            <div style="flex: 1; overflow: hidden">
                <div style="font-weight: 700; font-size: 0.9rem; color: #fff">
                    <%= user.username %>
                </div>
                <div style="font-size: 0.75rem; color: var(--text-muted)">Project Owner</div>
            </div>
            <a href="/logout" style="color: var(--text-muted); text-decoration: none">ðŸšª</a>
        </div>
    </aside>

    <main class="main">
        <!-- Dashboard / Console Tab -->
        <div id="tab-console" class="tab-content active">
            <header>
                <div>
                    <h1 style="font-size: 1.8rem; font-weight: 800; margin-bottom: 6px;">
                        <%= config.server.name %>
                    </h1>
                    <div id="status-badge" class="status-badge status-stopped"><span>Connecting...</span></div>
                </div>
                <div class="header-actions">
                    <button class="btn btn-primary" onclick="control('start')"><svg>
                            <use href="#icon-power" />
                        </svg> Start</button>
                    <button class="btn btn-outline" onclick="control('stop')">Stop</button>
                    <button class="btn btn-outline" onclick="control('restart')">Restart</button>
                </div>
            </header>

            <div class="card" style="margin-top: 32px">
                <h3>Live Console</h3>
                <div id="console" class="terminal">
                    <div class="terminal-line">Initializing secure connection...</div>
                </div>
                <div class="command-bar">
                    <input type="text" id="cmd-input" placeholder="Type command here..."
                        onkeypress="if(event.key==='Enter') sendCmd()">
                    <button class="btn btn-primary" onclick="sendCmd()">Run Command</button>
                </div>
            </div>
        </div>

        <!-- Files Manager Tab -->
        <div id="tab-files" class="tab-content">
            <header>
                <h1>File Manager</h1>
                <div class="header-actions">
                    <button class="btn btn-primary" onclick="document.getElementById('file-upload').click()">Upload
                        File</button>
                    <input type="file" id="file-upload" style="display: none" onchange="uploadFile()">
                    <button class="btn btn-outline" onclick="showFolderModal()">New Folder</button>
                </div>
            </header>

            <div class="card" style="margin-top: 32px">
                <div class="file-controls">
                    <div class="file-breadcrumb" id="breadcrumb">/ root</div>
                </div>

                <div class="file-list-header">
                    <span>NAME</span>
                    <span>SIZE</span>
                    <span>MODIFIED</span>
                    <span>ACTIONS</span>
                </div>
                <div id="file-list"></div>
            </div>
        </div>

        <!-- Backups Tab -->
        <div id="tab-backups" class="tab-content">
            <header>
                <h1>System Backups</h1>
                <button class="btn btn-primary" onclick="createBackup()">Create Manual Backup</button>
            </header>
            <div class="card" style="margin-top: 32px">
                <div id="backup-list"></div>
            </div>
        </div>
    </main>

    <!-- Modals -->
    <div id="editor-modal" class="modal-overlay">
        <div class="modal">
            <h2 id="editor-title">Editing File</h2>
            <textarea id="editor-content"></textarea>
            <div style="display: flex; justify-content: flex-end; gap: 12px">
                <button class="btn btn-outline" onclick="closeModal('editor-modal')">Cancel</button>
                <button class="btn btn-primary" onclick="saveFile()">Save Changes</button>
            </div>
        </div>
    </div>

    <!-- Rename Modal -->
    <div id="rename-modal" class="modal-overlay">
        <div class="modal" style="max-width: 400px">
            <h2>Rename Item</h2>
            <input type="text" id="rename-input" style="width: 100%; margin-bottom: 24px">
            <div style="display: flex; justify-content: flex-end; gap: 12px">
                <button class="btn btn-outline" onclick="closeModal('rename-modal')">Cancel</button>
                <button class="btn btn-primary" onclick="confirmRename()">Rename</button>
            </div>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/dashboard.js"></script>
</body>

</html>