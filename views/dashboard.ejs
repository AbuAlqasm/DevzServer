<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DevzServer | Dashboard</title>
    <meta name="csrf-token" content="<%= csrfToken %>">
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&family=JetBrains+Mono:wght@400;500;600&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <!-- SVG Icon Library -->
    <svg style="display: none;">
        <symbol id="icon-terminal" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
            stroke-linecap="round" stroke-linejoin="round">
            <polyline points="4 17 10 11 4 5" />
            <line x1="12" y1="19" x2="20" y2="19" />
        </symbol>
        <symbol id="icon-files" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
            stroke-linecap="round" stroke-linejoin="round">
            <path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z" />
            <polyline points="13 2 13 9 20 9" />
        </symbol>
        <symbol id="icon-backup" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
            stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="6" width="20" height="12" rx="2" />
            <path d="M12 12h.01" />
            <path d="M17 12h.01" />
            <path d="M7 12h.01" />
        </symbol>
        <symbol id="icon-power" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
            stroke-linecap="round" stroke-linejoin="round">
            <path d="M18.36 6.64a9 9 0 1 1-12.73 0" />
            <line x1="12" y1="2" x2="12" y2="12" />
        </symbol>
        <symbol id="icon-stop" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
            stroke-linecap="round" stroke-linejoin="round">
            <rect x="6" y="6" width="12" height="12" rx="2" />
        </symbol>
        <symbol id="icon-refresh" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
            stroke-linecap="round" stroke-linejoin="round">
            <polyline points="23 4 23 10 17 10" />
            <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10" />
        </symbol>
        <symbol id="icon-plus" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
            stroke-linecap="round" stroke-linejoin="round">
            <line x1="12" y1="5" x2="12" y2="19" />
            <line x1="5" y1="12" x2="19" y2="12" />
        </symbol>
        <symbol id="icon-upload" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
            stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
            <polyline points="17 8 12 3 7 8" />
            <line x1="12" y1="3" x2="12" y2="15" />
        </symbol>
        <symbol id="icon-trash" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
            stroke-linecap="round" stroke-linejoin="round">
            <polyline points="3 6 5 6 21 6" />
            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2" />
        </symbol>
        <symbol id="icon-edit" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
            stroke-linecap="round" stroke-linejoin="round">
            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" />
            <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z" />
        </symbol>
        <symbol id="icon-folder" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
            stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z" />
        </symbol>
        <symbol id="icon-folder-plus" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
            stroke-linecap="round" stroke-linejoin="round">
            <path d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z" />
            <line x1="12" y1="11" x2="12" y2="17" />
            <line x1="9" y1="14" x2="15" y2="14" />
        </symbol>
        <symbol id="icon-download" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
            stroke-linecap="round" stroke-linejoin="round">
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
            <polyline points="7 10 12 15 17 10" />
            <line x1="12" y1="15" x2="12" y2="3" />
        </symbol>
        <symbol id="icon-cpu" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
            stroke-linecap="round" stroke-linejoin="round">
            <rect x="4" y="4" width="16" height="16" rx="2" />
            <rect x="9" y="9" width="6" height="6" />
            <line x1="9" y1="1" x2="9" y2="4" />
            <line x1="15" y1="1" x2="15" y2="4" />
            <line x1="9" y1="20" x2="9" y2="23" />
            <line x1="15" y1="20" x2="15" y2="23" />
            <line x1="20" y1="9" x2="23" y2="9" />
            <line x1="20" y1="14" x2="23" y2="14" />
            <line x1="1" y1="9" x2="4" y2="9" />
            <line x1="1" y1="14" x2="4" y2="14" />
        </symbol>
        <symbol id="icon-users" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
            stroke-linecap="round" stroke-linejoin="round">
            <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2" />
            <circle cx="9" cy="7" r="4" />
            <path d="M23 21v-2a4 4 0 0 0-3-3.87" />
            <path d="M16 3.13a4 4 0 0 1 0 7.75" />
        </symbol>
        <symbol id="icon-server" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
            stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="2" width="20" height="8" rx="2" ry="2" />
            <rect x="2" y="14" width="20" height="8" rx="2" ry="2" />
            <line x1="6" y1="6" x2="6.01" y2="6" />
            <line x1="6" y1="18" x2="6.01" y2="18" />
        </symbol>
    </svg>

    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="logo">
            <div class="logo-icon">
                <svg>
                    <use href="#icon-terminal" />
                </svg>
            </div>
            <span class="logo-text">Devz<span>Server</span></span>
        </div>

        <div class="nav-section-title">Menu</div>
        <nav class="nav-links">
            <div class="nav-item active" onclick="switchTab('dashboard')" id="nav-dashboard">
                <svg>
                    <use href="#icon-terminal" />
                </svg>
                <span>Dashboard</span>
            </div>
            <div class="nav-item" onclick="switchTab('files')" id="nav-files">
                <svg>
                    <use href="#icon-files" />
                </svg>
                <span>Files</span>
            </div>
            <div class="nav-item" onclick="switchTab('backups')" id="nav-backups">
                <svg>
                    <use href="#icon-backup" />
                </svg>
                <span>Backups</span>
            </div>
        </nav>

        <div class="user-profile">
            <div class="avatar">
                <%= user.username[0].toUpperCase() %>
            </div>
            <div class="user-info">
                <div class="user-name">
                    <%= user.username %>
                </div>
                <div class="user-role">Administrator</div>
            </div>
            <a href="/logout" class="logout-btn" title="Logout">
                <svg style="width:16px;height:16px" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                    stroke-width="2">
                    <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4" />
                    <polyline points="16 17 21 12 16 7" />
                    <line x1="21" y1="12" x2="9" y2="12" />
                </svg>
            </a>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main">

        <!-- Dashboard Tab -->
        <div id="tab-dashboard" class="tab-content active">
            <div class="page-header">
                <div>
                    <h1>
                        <%= config.server.name %>
                    </h1>
                    <div class="page-header-sub">
                        <div id="status-badge" class="status-badge status-stopped">
                            <div class="status-dot"></div>
                            <span>Connecting</span>
                        </div>
                    </div>
                </div>
                <div class="header-actions">
                    <button class="btn btn-success" onclick="control('start')" id="btn-start">
                        <svg>
                            <use href="#icon-power" />
                        </svg> Start
                    </button>
                    <button class="btn btn-danger" onclick="control('stop')" id="btn-stop">
                        <svg>
                            <use href="#icon-stop" />
                        </svg> Stop
                    </button>
                    <button class="btn btn-outline" onclick="control('restart')" id="btn-restart">
                        <svg>
                            <use href="#icon-refresh" />
                        </svg> Restart
                    </button>
                </div>
            </div>

            <!-- Stats Cards -->
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-label">Server Type</div>
                    <div class="stat-value">
                        <svg class="stat-icon">
                            <use href="#icon-server" />
                        </svg>
                        <%= config.server.type.charAt(0).toUpperCase() + config.server.type.slice(1) %>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Version</div>
                    <div class="stat-value">
                        <svg class="stat-icon">
                            <use href="#icon-cpu" />
                        </svg>
                        <%= config.server.version %>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Memory</div>
                    <div class="stat-value">
                        <svg class="stat-icon">
                            <use href="#icon-server" />
                        </svg>
                        <%= config.server.memory %>
                    </div>
                </div>
                <div class="stat-card">
                    <div class="stat-label">Max Players</div>
                    <div class="stat-value">
                        <svg class="stat-icon">
                            <use href="#icon-users" />
                        </svg>
                        <%= config.server.max_players %>
                    </div>
                </div>
            </div>

            <!-- Console -->
            <div class="card">
                <div class="card-header">
                    <div class="card-title">
                        <svg style="width:16px;height:16px">
                            <use href="#icon-terminal" />
                        </svg>
                        Console
                    </div>
                    <button class="btn btn-sm btn-outline" onclick="clearConsole()">Clear</button>
                </div>
                <div id="console" class="terminal">
                    <div class="terminal-line line-system">Panel initialized. Waiting for connection...</div>
                </div>
                <div class="command-bar">
                    <input type="text" id="cmd-input" placeholder="$ Enter server command..."
                        onkeydown="if(event.key==='Enter') sendCmd()">
                    <button class="btn btn-primary" onclick="sendCmd()">Run</button>
                </div>
            </div>
        </div>

        <!-- Files Tab -->
        <div id="tab-files" class="tab-content">
            <div class="page-header">
                <h1>File Manager</h1>
                <div class="header-actions">
                    <button class="btn btn-primary" onclick="document.getElementById('file-upload').click()">
                        <svg>
                            <use href="#icon-upload" />
                        </svg> Upload
                    </button>
                    <input type="file" id="file-upload" style="display: none" onchange="uploadFile()">
                    <button class="btn btn-outline" onclick="showCreateModal('file')">
                        <svg>
                            <use href="#icon-plus" />
                        </svg> New File
                    </button>
                    <button class="btn btn-outline" onclick="showCreateModal('folder')">
                        <svg>
                            <use href="#icon-folder-plus" />
                        </svg> New Folder
                    </button>
                </div>
            </div>

            <div class="card">
                <div class="file-controls">
                    <div class="file-breadcrumb" id="breadcrumb"></div>
                </div>

                <div class="file-list-header">
                    <span>Name</span>
                    <span>Size</span>
                    <span>Modified</span>
                    <span style="text-align: right">Actions</span>
                </div>
                <div id="file-list"></div>
            </div>
        </div>

        <!-- Backups Tab -->
        <div id="tab-backups" class="tab-content">
            <div class="page-header">
                <h1>Server Backups</h1>
                <button class="btn btn-primary" onclick="createBackup()" id="btn-backup">
                    <svg>
                        <use href="#icon-plus" />
                    </svg> Create Backup
                </button>
            </div>
            <div class="card">
                <div class="file-list-header">
                    <span>Name</span>
                    <span>Size</span>
                    <span>Date</span>
                    <span style="text-align: right">Actions</span>
                </div>
                <div id="backup-list"></div>
            </div>
        </div>
    </main>

    <!-- Editor Modal -->
    <div id="editor-modal" class="modal-overlay">
        <div class="modal" style="max-width: 700px">
            <h2 id="editor-title">Editing File</h2>
            <textarea id="editor-content" spellcheck="false"></textarea>
            <div class="modal-footer">
                <button class="btn btn-outline" onclick="closeModal('editor-modal')">Discard</button>
                <button class="btn btn-primary" onclick="saveFile()">Save Changes</button>
            </div>
        </div>
    </div>

    <!-- Prompt Modal (Rename/Create) -->
    <div id="prompt-modal" class="modal-overlay">
        <div class="modal" style="max-width: 420px">
            <h2 id="prompt-title">New Item</h2>
            <div class="form-group">
                <label class="form-label" id="prompt-label">Name</label>
                <input type="text" id="prompt-input">
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline" onclick="closeModal('prompt-modal')">Cancel</button>
                <button class="btn btn-primary" id="prompt-confirm-btn">Confirm</button>
            </div>
        </div>
    </div>

    <!-- Toast Container -->
    <div id="toast-container" class="toast-container"></div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/dashboard.js"></script>
</body>

</html>